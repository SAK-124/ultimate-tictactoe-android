{
  "rules": {
    ".read": false,
    ".write": false,
    "rooms": {
      "$roomCode": {
        ".read": true,
        ".write": true,
        "players": {
          "$uid": {
            ".validate": "newData.hasChildren(['uid', 'nickname', 'symbol'])"
          }
        },
        "state": {
          ".validate": "newData.hasChildren(['cells', 'miniWinners', 'nextMiniGrid', 'moveCount', 'currentTurnUid', 'status', 'version'])"
        },
        "presence": {
          "$uid": {
            ".write": "auth != null && auth.uid == $uid"
          }
        }
      }
    }
  }
}
